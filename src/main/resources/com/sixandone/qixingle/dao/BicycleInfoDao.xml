<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sixandone.qixingle.dao.BicycleInfoDao">

    <select id="queryBicycleInfo" resultType="com.sixandone.qixingle.entity.Bicycle">
        SELECT  * FROM `qixingle`.`t_bicycle` ORDER BY UsedCount DESC LIMIT 0,20;
    </select>

    <select id="queryBicycleByNumber" resultType="com.sixandone.qixingle.entity.Bicycle">
        SELECT* FROM `qixingle`.`t_bicycle` where bicycleNumber = #{bicycleNumber};
    </select>

    <select id="queryBicycleImage" resultType="byte[]">
        SELECT bicycleImage FROM `qixingle`.`t_bicycle` where bicycleNumber = #{bicycleNumber};
    </select>

</mapper>