<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sixandone.qixingle.dao.SysUserDao">

    <!--根据电话号码查询用户信息-->
    <select id="getByPhoneNumber" resultType="com.sixandone.qixingle.entity.SysUser">
         select * from t_user where phoneNumber = #{phoneNumber}
    </select>


<!--添加用户-->
    <insert id="addUser">
        INSERT INTO `qixingle`.`t_user` (`userID`,`openID`, `sessionKey`, `unionId`, `phoneNumber`, `userName`, `createTime`, `address`, `enabled`, `accountNoExpired`, `accountNoLocked`) VALUES (null, #{openid} ,#{sessionKey}, #{unionId}, #{phoneNumber},#{userName},#{createTime},#{address}, #{enabled},#{accountNoExpired},#{accountNoLocked})
    </insert>

<!--跟新用户信息-->
    <update id="modifyUser">
        UPDATE `qixingle`.`t_user` SET `phoneNumber` = #{phoneNumber},`userName` = #{username},`address` = #{address} WHERE `openID` = #{openID}
    </update>


<!--根据用户名查询用户-->
    <select id="queryByUserName" resultType="com.sixandone.qixingle.entity.SysUser">
        SELECT * FROM `qixingle`.`t_user` WHERE `userName` = #{userName}
    </select>


<!--根据openid 查询用户信息-->
    <select id="queryUserByOpenID" resultType="com.sixandone.qixingle.entity.SysUser">
        SELECT * FROM `qixingle`.`t_user` WHERE `openID` = #{openid}
    </select>


<!--检查是否启用用户-->
    <select id="checkIsEnabled" resultType="String">
        SELECT enabled , accountNoExpired  FROM `qixingle`.`t_user` WHERE `openID` = #{openid}
    </select>


</mapper>